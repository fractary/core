{
  "name": "@fractary/core-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Fractary Core Monorepo - SDK, CLI, MCP Server, and Plugins",
  "workspaces": [
    "sdk/js",
    "cli",
    "mcp/server"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "dependencies": {
    "node-domexception": "file:./scripts/stubs/node-domexception"
  },
  "overrides": {
    "glob": "^13.0.0",
    "node-domexception": "$node-domexception"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fractary/core.git"
  },
  "author": "Fractary Team",
  "license": "MIT"
}
