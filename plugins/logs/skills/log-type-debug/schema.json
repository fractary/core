{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Debug Log Schema",
  "properties": {
    "log_type": {"const": "debug"},
    "title": {"type": "string"},
    "debug_id": {"type": "string"},
    "issue_number": {"type": ["string", "number", "null"]},
    "date": {"type": "string", "format": "date-time"},
    "status": {"enum": ["active", "stopped", "resolved", "archived"]},
    "component": {"type": "string"},
    "severity": {"enum": ["low", "medium", "high", "critical"]},
    "repository": {"type": "string"},
    "branch": {"type": "string"}
  },
  "required": ["log_type", "title", "debug_id", "date", "status"]
}
