{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Operational Log Schema",
  "properties": {
    "log_type": {"const": "operational"},
    "title": {"type": "string"},
    "operation_id": {"type": "string"},
    "date": {"type": "string", "format": "date-time"},
    "status": {"enum": ["active", "completed", "failed", "archived"]},
    "operation_type": {"enum": ["maintenance", "backup", "restore", "migration", "sync", "cleanup", "monitoring"]},
    "severity": {"enum": ["info", "warning", "error", "critical"]},
    "component": {"type": "string"},
    "duration_seconds": {"type": "number"},
    "exit_code": {"type": "number"}
  },
  "required": ["log_type", "title", "operation_id", "date", "status", "operation_type"]
}
