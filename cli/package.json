{
  "name": "@fractary/core-cli",
  "version": "0.1.0",
  "description": "CLI for Fractary Core SDK - work tracking, repository management, specifications, logging, file storage, and documentation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fractary-core": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "fractary",
    "core",
    "cli",
    "work",
    "repository",
    "git",
    "github",
    "gitlab",
    "bitbucket",
    "jira",
    "linear",
    "specification",
    "logging",
    "file-storage",
    "documentation"
  ],
  "author": "Fractary Team",
  "license": "MIT",
  "dependencies": {
    "@fractary/core": "^0.1.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "inquirer": "^13.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.26",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fractary/core.git",
    "directory": "cli"
  },
  "bugs": {
    "url": "https://github.com/fractary/core/issues"
  },
  "homepage": "https://github.com/fractary/core/tree/main/cli#readme"
}
